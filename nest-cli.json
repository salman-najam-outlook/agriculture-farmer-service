{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../src/deforestation/image/",
        "outDir": "dist/src"
      },
      {
        "include": "../src/deforestation/view/",
        "outDir": "dist/src"
      },
      {
        "include": "../src/mail/templates/",
        "outDir": "dist/src"
      },
      {
        "include": "../src/i18n/**/*",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "../src/email-scheduler/views/**/*",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "../solana/**/*",
        "outDir": "dist/solana",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
